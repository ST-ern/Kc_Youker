<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_default"
    tools:context=".activity.ModifyBookDescriptionActivity">

    <include
        android:id="@+id/include"
        layout="@layout/layout_toolbar" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_book_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/k_lightRed">

        <android.support.design.widget.TextInputEditText
            android:drawableLeft="@drawable/icon_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Modify Your Description..."
            android:minHeight="100dp"
            android:theme="@style/MyEditText" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_modify_book_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/selector_button"
        android:textColor="@color/text_white"
        android:text="Modify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_book_description" />

</android.support.constraint.ConstraintLayout>